<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IndustrialVisit">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/clseve"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:text="College Visit's"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/depeve"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:text="Department Visit's"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".facultyActivity">

            <LinearLayout
                android:id="@+id/linearnoitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:tint="@color/purple_700"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No item found"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                app:spanCount="1"
                android:id="@+id/employee_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/industrial_row" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </LinearLayout>

</LinearLayout>